<section id="projects" class="py-20 bg-white">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Projects
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        A selection of my work. More projects coming soon.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- CubeCut 3D 模型占位符 -->
      <div class="project-card-3d">
        <div class="relative mx-auto w-72 h-72 md:w-80 md:h-80">
          <div class="w-full h-full bg-gradient-to-br from-gray-700 to-gray-900 rounded-lg flex items-center justify-center shadow-2xl">
            <div class="text-white text-center">
              <div class="text-4xl mb-2">🧊🔪</div>
              <div class="text-lg">CubeCut 3D Demo</div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- CubeCut 介绍 -->
      <div class="project-card-info">
        <h3 class="text-2xl font-bold text-gray-900 mb-4">
          CubeCut
        </h3>
        <p class="text-gray-600 mb-6">
          An application for demonstrating 3D cube slicing and geometric visualization. Perfect for students and educators in mathematics.
        </p>
        <div class="flex flex-wrap gap-2 mb-6">
          <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-full">Mathematics</span>
          <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded-full">3D Visualization</span>
          <span class="bg-purple-100 text-purple-800 text-xs font-medium px-2.5 py-0.5 rounded-full">Education</span>
        </div>
        <a href="#" class="font-semibold text-blue-600 hover:text-blue-800 transition-colors">
          View Details →
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    if (window.gsap && window.ScrollTrigger) {
      const tl = window.gsap.timeline({
        scrollTrigger: {
          trigger: "#projects",
          start: "top 80%",
          end: "bottom 20%",
          toggleActions: "play none none reverse"
        }
      });

      tl.fromTo(".project-card-3d", {
        x: -100,
        opacity: 0,
        rotateY: 15
      }, {
        x: 0,
        opacity: 1,
        rotateY: 0,
        duration: 1,
        ease: "power3.out"
      })
      .fromTo(".project-card-info", {
        x: 100,
        opacity: 0
      }, {
        x: 0,
        opacity: 1,
        duration: 1,
        ease: "power3.out"
      }, "-=0.7");
    }
  });
</script>
